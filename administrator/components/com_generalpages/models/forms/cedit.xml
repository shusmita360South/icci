<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" default="0" label="COM_GENERALPAGES_FORM_LBL_EDIT_ID"
		readonly="true" class="readonly"
		description="JGLOBAL_FIELD_ID_DESC" />
    <field name="created_by" type="createdby" default="" 
		label="COM_GENERALPAGES_FORM_LBL_EDIT_CREATED_BY"
		description="COM_GENERALPAGES_FORM_DESC_EDIT_CREATED_BY"  />
    <field name="title" type="text" size="40" class="inputbox"
		label="COM_GENERALPAGES_FORM_LBL_CEDIT_TITLE"
		description="COM_GENERALPAGES_FORM_DESC_CEDIT_TITLE" 
        required="true" 
		filter="raw" />
    <field name="menuitem" type="menuitem" default="45" 
        label="Select a menu item" 
        description="Select a menu item" />
    <field 
        name="intro" 
        type="textarea" 
        filter="raw"
        label="COM_GENERALPAGES_FORM_LBL_EDIT_INTRO"
    />
    
    <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset" />
    <field name="checked_out_time" type="hidden" filter="unset" />
  </fieldset>
</form>
