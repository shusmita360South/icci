<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" default="0" label="COM_CONTACTFORM_FORM_LBL_EDIT_ID"
        readonly="true" class="readonly"
        description="JGLOBAL_FIELD_ID_DESC" />
    <field name="created_by" type="createdby" default=""
        label="COM_CONTACTFORM_FORM_LBL_EDIT_CREATED_BY"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_CREATED_BY"  />
    <field name="title" type="text" size="40" class="inputbox"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_TITLE"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_TITLE"
        required="true"
        filter="safehtml" />
    <field name="emailto" type="text" size="40" class="inputbox"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_EMAILTO"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_EMAILTO"
        validate="email"
        filter="safehtml" />
    <field name="body" type="editor" buttons="true"
        class="inputbox"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_BODY"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_BODY"
        required="false"
        filter="safehtml" />
    <field name="thankyou" type="editor" buttons="true"
        class="inputbox"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_THANKYOU"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_THANKYOU"
        filter="safehtml" />
    <field name="metatitle" type="textarea"
        class="inputbox"
        filter="safehtml"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_METATITLE"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_METATITLE"  />
    <field name="metadesc" type="textarea"
        class="inputbox"
        filter="safehtml"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_METADESC"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_METADESC"  />
    <field name="metakeys" type="textarea"
        class="inputbox"
        filter="safehtml"
        label="COM_CONTACTFORM_FORM_LBL_EDIT_METAKEYS"
        description="COM_CONTACTFORM_FORM_DESC_EDIT_METAKEYS"  />
    <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset" />
    <field name="checked_out_time" type="hidden" filter="unset" />
  </fieldset>
</form>
